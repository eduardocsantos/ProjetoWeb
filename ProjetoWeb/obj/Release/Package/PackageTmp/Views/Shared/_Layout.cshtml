<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="~/Imagens/favicon.ico" />

    <title>@ViewBag.Title - Projeto Web</title>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>   
    <link href="~/Content/bootstrap.spacelab.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="~/usuario">
                            <i class="fa fa-user-circle" aria-hidden="true"></i>
                            Usuários
                        </a>
                    </li>
                    <li>
                        <a href="~/grupousuario">
                            <i class="fa fa-users" aria-hidden="true"></i>
                            Grupos de Usuários
                        </a>
                    </li>
                    <li>
                        <a href="~/produto">
                            <i class="fa fa-cubes" aria-hidden="true"></i>
                            Gerenciar produtos
                        </a>
                    </li>
                    <li>
                        <a href="~/relatorio">
                            <i class="fa fa-line-chart" aria-hidden="true"></i>
                            Relatorios
                        </a>
                    </li>
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="~/loja" target="_blank">Loja</a>
                    </li>
                    <li>
                        <a href="#">@User.Identity.Name</a>
                    </li>
                    <li>
                        <a href="~/autenticacao/sair">
                            <span class="glyphicon glyphicon-log-out"></span> 
                            Sair
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Projeto Web</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scriptGrafico", false)
</body>
</html>